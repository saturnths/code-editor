extends layout

block menuitem
  -var page = 'New';

block usern
  -var uname = username

block content
  .page-header
    h1 New Document
  form(name='create', action='/create-doc', method='post')
    .form-group
      label.control-label(for='title') Title
      input.form-control(type='text', name='title', placeholder='Enter a title...')
    button.btn.btn-primary Create
